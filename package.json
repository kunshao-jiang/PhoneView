{
  "name": "phoneview",
  "displayName": "PhoneView",
  "description": "内置浏览器功能，类似于HBuilder",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:phoneview.browser",
    "onCommand:phoneview.previewFile"
  ],
  "main": "out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "phoneview",
          "title": "PhoneView",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "phoneview": [
        {
          "type": "webview",
          "id": "phoneview.browser",
          "name": "浏览器"
        }
      ]
    },
    "commands": [
      {
        "command": "phoneview.previewFile",
        "title": "预览当前文件"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/phoneview.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^5.1.6"
  }
}
